                layer.msg("错误", {
                    icon: 2,
                    time: 2000 //2秒关闭（如果不配置，默认是3秒）
                });
            },
            success: function (res) {
                console.log(res);
                if (res.code == 1) {
                    $("#edit-iframe", parent.document).attr("src", "AdminGetingeProductEdit?productId=" + pid);//刷新iframe
                }
                else {
                    layer.open({
                        content: res.msg
                       , btn: '确定'
                    });
                }
            }
        });
    }
    function delWord(){
        var postdata = {};
        postdata.pId=pid;
        postdata.pType="word";

        $.ajax({
            url: '/Admin/DelGetingeProductWord',
            type: "post",
            data: postdata,
            beforeSend: function () {
